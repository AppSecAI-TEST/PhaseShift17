<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="phaseshift.com.demophase">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashIntroActivity"
            android:theme="@style/Theme.Intro" />
        <activity
            android:name=".Events.EventsActivity"
            android:label="Events"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Contact.ContactActivity"
            android:label="@string/title_activity_contact"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AboutPS.AboutPSActivity"
            android:label="@string/title_activity_about_ps"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AboutBMS.AboutBMSActivity"
            android:label="@string/title_activity_about_bms"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Map.MapsActivity"
            android:label="@string/title_activity_maps"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FilterActivity"
            android:label="@string/title_activity_filter"
            android:theme="@style/AppTheme"
            android:parentActivityName=".Events.EventsActivity"/>
        <activity
            android:name=".basicActivity"
            android:label="@string/title_activity_basic"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".EventDetailActivity"
            android:label="Event Details"
            android:theme="@style/AppTheme"
            android:parentActivityName=".Events.EventsActivity"></activity>
    </application>

</manifest>